{
  "manifest_version": 3,
  "name": "LuminaAI â€” Accessibility Reader",
  "version": "1.0.0",
  "description": "Summarize, read aloud, and ask your AI tutor about any webpage content.",

  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus"
  ],

  "host_permissions": [
    "http://localhost:5173/*",
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background/background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    },
    "default_title": "LuminaAI"
  },

  "icons": {
    "128": "icons/icon128.png"
  }
}
